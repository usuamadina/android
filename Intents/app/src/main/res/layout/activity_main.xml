<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMessage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/sendRequest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/sendRequest"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="@dimen/abc_text_size_title_material"
        android:layout_height="wrap_content"
        android:id="@+id/lblMessage"
        android:layout_below="@+id/sendRequest"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/sendRequest" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgCamera"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/btnCamera"
        android:layout_alignEnd="@+id/sendRequest"
        android:layout_above="@+id/btnCamera"
        android:layout_below="@+id/lblMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a Photo"
        android:id="@+id/btnCamera"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/sendRequest"
        android:layout_alignParentStart="true" />
</RelativeLayout>
