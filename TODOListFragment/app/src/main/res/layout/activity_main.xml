<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="usuamadina.todolistfragment.fragment.InputFragment"
        android:id="@+id/fragment_input"
        tools:layout="@layout/fragment_input"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="usuamadina.todolistfragment.fragment.TodoListFragment"
        android:id="@+id/Listfragment"
        android:layout_weight="1"
        tools:layout="@android:layout/simple_list_item_1" />
</LinearLayout>